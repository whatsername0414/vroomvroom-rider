<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VroomVroomRider" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_a30</item>
        <item name="colorPrimaryVariant">@color/gray_7f7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/red_a30</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="maxLines">18</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="MapboxCustomStyleTripProgressView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="tripProgressTextColor">@color/mapbox_trip_progress_text_color</item>
        <item name="tripProgressDividerColor">@color/mapbox_trip_progress_divider_color</item>

        <item name="timeRemainingTextAppearance">@style/MapboxStyleTimeRemaining</item>
        <item name="distanceRemainingTextAppearance">@style/MapboxStyleDistanceRemaining</item>
        <item name="estimatedArrivalTimeTextAppearance">@style/MapboxStyleEstimatedArrivalTime</item>
        <item name="distanceRemainingIcon">@drawable/mapbox_ic_pin</item>
        <item name="estimatedArrivalTimeIcon">@drawable/mapbox_ic_time</item>
    </style>
</resources>